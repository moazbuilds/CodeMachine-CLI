{
  "name": "codemachine",
  "version": "0.7.0",
  "description": "Multi-Agent Workflow Orchestration.",
  "type": "module",
  "bin": {
    "codemachine": "bin/codemachine.js",
    "cm": "bin/codemachine.js"
  },
  "files": [
    "bin/",
    "config/",
    "prompts/",
    "templates/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20.10.0",
    "bun": "1.3.3"
  },
  "optionalDependencies": {
    "codemachine-linux-x64": "0.7.0",
    "codemachine-darwin-arm64": "0.7.0",
    "codemachine-darwin-x64": "0.7.0",
    "codemachine-windows-x64": "0.7.0"
  },
  "scripts": {
    "_comment_dev": "Development: Run from source (no build needed)",
    "dev": "DEBUG=true bun --conditions=browser src/runtime/cli-setup.ts",
    "debug": "DEBUG=true bun --conditions=browser src/runtime/cli-setup.ts",
    "start": "bun --conditions=browser src/runtime/cli-setup.ts",
    "_comment_build": "Production: Build platform-specific executables",
    "build": "bun scripts/build-binaries.mjs",
    "_comment_quality": "Code Quality: Linting, testing, formatting",
    "lint": "eslint --max-warnings=0 \"{src,tests}/**/*.{ts,tsx}\"",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "_comment_release": "Release: Publishing and validation",
    "prepare": "husky install",
    "validate": "bun scripts/validate.mjs",
    "release": "bun scripts/publish.ts --tag latest",
    "publish:all": "bun scripts/publish.ts --tag latest --dry-run"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "@opentui/core": "0.1.48",
    "@opentui/solid": "0.1.48",
    "@solid-primitives/event-bus": "1.1.2",
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "proper-lockfile": "^4.1.2",
    "solid-js": "1.9.9",
    "update-notifier": "^7.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/babel__core": "^7.20.5",
    "@types/bun": "1.3.0",
    "@types/node": "^20.12.7",
    "@types/proper-lockfile": "^4.1.4",
    "@types/update-notifier": "^6.0.8",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.0.7",
    "prettier": "^3.2.5",
    "typedoc": "^0.28.14",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.44.1"
  }
}
